{
	"extends": "@repo/typescript-config/base.json",
	"compilerOptions": {
		"outDir": "dist",
		"noEmit": false,
		"baseUrl": "./src",
		"target": "ES2022",
    	"module": "ES2022",
		"moduleResolution": "Node",
		"importsNotUsedAsValues": "remove",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
