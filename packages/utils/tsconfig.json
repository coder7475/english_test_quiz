{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": false,
    "baseUrl": "./src",    
    "target": "ES2022",    	
    "module": "ESNext",
    "moduleResolution": "Node",
    "importsNotUsedAsValues": "remove",
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
